<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BaseSystemCalculator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="ButtonStyle">
        <item name="android:textSize">@dimen/largeText</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/segoe_ui</item>
        <item name="android:textColor">@color/button_hex_system_color</item>
    </style>

    <style name="numberButtonStyle" parent="ButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">@dimen/largeText</item>
        <item name="android:textColor">@color/number_color</item>
    </style>

</resources>